{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/build",
  "rewrites": [
    {
      "source": "/api/search",
      "destination": "/api/search.py"
    },
    {
      "source": "/api/stats",
      "destination": "/api/stats.py"
    },
    {
      "source": "/api/suggest",
      "destination": "/api/suggest.py"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/build/index.html"
    }
  ]
}
